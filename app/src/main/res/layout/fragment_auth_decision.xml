<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp">

        <!-- Soft gradient panel behind the image (like screenshot) -->
        <View
            android:id="@+id/bgHero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_hero_panel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Food Image Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="14dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="@id/bgHero"
            app:layout_constraintBottom_toBottomOf="@id/bgHero"
            app:layout_constraintStart_toStartOf="@id/bgHero"
            app:layout_constraintEnd_toEndOf="@id/bgHero">

            <ImageView
                android:id="@+id/imageAuth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/auth_image"
                android:scaleType="centerCrop"
                android:src="@drawable/auth_decision_img" />

        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/ready_to_cook"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/bgHero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/your_personal_meal_planner_awaits_join_mealmate_to_save_your_favorite_recipes"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign Up with Email (Primary Filled) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUpEmail"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="22dp"
            android:text="@string/sign_up_with_email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:cornerRadius="18dp"
            app:icon="@drawable/email_icon"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="26dp"
            app:iconTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign In (Primary Light Filled) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_light"
            app:cornerRadius="18dp"
            app:icon="@drawable/sign_in_icon"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="26dp"
            app:iconTint="@color/primary"
            app:layout_constraintTop_toBottomOf="@id/btnSignUpEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Continue with Google (Outlined, White) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:text="@string/continue_with_google"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/white"
            app:cornerRadius="18dp"
            app:icon="@drawable/google_icon"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="26dp"
            app:iconTint="@null"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/btnSignIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Continue as Guest (TEXT at end of buttons like screenshot) -->
        <TextView
            android:id="@+id/textGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="@string/continue_as_guest"
            android:textColor="@color/text_hint"
            android:textSize="18sp"
            android:textStyle="bold"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toBottomOf="@id/btnGoogle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
