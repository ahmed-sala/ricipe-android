<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="6dp"
    android:paddingVertical="4dp">

    <!-- Ingredient Image Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/ingredient_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivIngredient"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:contentDescription="Ingredient"
                android:visibility="invisible"
                tools:src="@drawable/onboarding_1" />

            <!-- Lottie Loading for ingredient image -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieIngredientLoading"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_anim" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Ingredient Name -->
    <TextView
        android:id="@+id/tvIngredientName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="13sp"
        tools:text="Mushroom" />

    <!-- Ingredient Measure -->
    <TextView
        android:id="@+id/tvIngredientMeasure"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/gray_500"
        android:textSize="11sp"
        tools:text="200g" />

</LinearLayout>
