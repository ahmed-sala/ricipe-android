<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Error state -->

    <!-- Focused state -->
    <item android:color="@color/primary" android:state_focused="true" />

    <!-- Hovered state -->
    <item android:color="@color/text_secondary" android:state_hovered="true" />

    <!-- Enabled but not focused -->
    <item android:color="@color/input_stroke_default" android:state_enabled="true" />

    <!-- Disabled state -->
    <item android:color="@color/input_stroke_disabled" android:state_enabled="false" />

    <!-- Default state -->
    <item android:color="@color/input_stroke_default" />

</selector>
